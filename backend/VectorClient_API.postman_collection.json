		{
			"name": "Dynamic Endpoints",
			"item": [
				{
					"name": "Dynamic Route",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/v1/endpoints/:userSlug/:routeName",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"v1",
								"endpoints",
								":userSlug",
								":routeName"
							],
							"variable": [
								{
									"key": "userSlug",
